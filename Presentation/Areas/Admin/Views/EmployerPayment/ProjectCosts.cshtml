@using Common.Utilities
@using Domain
@using Presentation.Helpers
@model List<Presentation.DTO.ProjectCostDto>

@{
    ViewBag.Title = "هزینه های پروژه";
    Layout = "_Layout";
    var projects = ViewBag.Projects as List<Project>;
    var projectId = ViewBag.ProjectId as int?;
    var project = ViewBag.Project as Project;
}

<div class="card">
    <div class="card-body">
        <h3>هزینه های پروژه</h3>

        @if (projects is not null && projects.Any())
        {
            <div class="row gap-2">
                @foreach (var item in projects)
                {
                    <a asp-action="ProjectCosts" asp-route-projectId="@item.Id" class="card"
                       style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">@item.Title</h5>
                            <h6 class="card-subtitle mb-2 text-muted">@(item.User.FirstName + " " + item.User.LastName)</h6>
                            @* <p class="card-text">@project.</p> *@
                        </div>
                    </a>
                }
            </div>
        }
        else
        {
            
            <table class="table table-hover mt-2">
                <tr>
                    <th>ردیف</th>
                    <th>گروه هزینه</th>
                    <th>بستانکار</th>
                    <th>تاریخ</th>
                    <th>مبلغ</th>
                    <th>نوع</th>
                    <th>نوع پرداخت</th>
                    <th>توضیحات</th>
                    <th>عملیات</th>
                </tr>
                @{
                    var index = 1;
                }
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@(index++)</td>
                        <td>@item.CostGroupTitle</td>
                        <td>@item.CreditorFullName</td>
                        <td>@item.Date</td>
                        <td>@item.AmountNumeric</td>
                        <td>@item.Type</td>
                        <td>@item.PayType</td>
                        <td>@item.Description</td>
                        <td>
                            <div class="dropdown d-inline-block">
                                <a class="nav-link" style="padding: .5rem 1rem"
                                   data-bs-toggle="dropdown"
                                   href="#" role="button" aria-haspopup="false" aria-expanded="false">
                                    <i class="fa fa-ellipsis-v font-20 text-muted"></i>
                                </a>
                                <div class="dropdown-menu" aria-labelledby="dLabel6" x-placement="bottom-start"
                                     style="text-align: right;position: absolute; will-change: transform; top: 0px; left: 0px; transform: translate3d(0px, 36px, 0px);">
                                    @if (CheckPermission.Check(User, "ProjectCost.Delete"))
                                    {
                                        <a asp-area="Admin" asp-controller="Invoice" asp-action="Delete"
                                           asp-route-id="@item.Id"
                                           class="dropdown-item">
                                            <i
                                                class="fa fa-trash"></i>
                                            حذف
                                        </a>
                                    }

                                </div>
                            </div>
                        </td>
                    </tr>
                }
                <tr>
                    <td colspan="4"></td>
                    <td>مجموع: @Model.Sum(i => i.Amount).ToNumeric()</td>
                    <td colspan="3"></td>
                </tr>

            </table>
        }
    </div>
</div>


