@using Presentation.Helpers

<div class="main-icon-menu">
    <nav class="nav">
        <a href="#Home" class="nav-link" id="MainHome">
            <i class="fa fa-home"></i>
        </a>
        @if (CheckPermission.Check(User, ["User.Index", "Role.Index", "Customer.Index", "Project.Index"]))
        {
            <a href="#BaseInfo" class="nav-link" id="MainBaseInfo">
                <i class="fa fa-info-circle"></i>
            </a>
        }
    </nav>
</div>
<div class="main-menu-inner">
    <div class="menu-body slimscroll">
        <div class="main-icon-menu-pane" id="Home">
            <div class="title-box">
                <h6 class="menu-title">خانه</h6>
            </div>
            <ul class="nav config-active-menu-home">
                <li class="nav-item">
                    <a class="nav-link menu-item" asp-action="Index" asp-controller="Dashboard"><i
                            class="dripicons-meter"></i>داشبورد</a>
                </li>
            </ul>

        </div>
        <div class="main-icon-menu-pane" id="BaseInfo">
            <div class="title-box">
                <h6 class="menu-title">اطلاعات پایه</h6>
            </div>

            <ul class="nav metismenu config-active-menu-baseInfo">
                @if (CheckPermission.Check(User, ["User.Index", "Role.Index"]))
                {
                    <li class="nav-item">
                        <a class="nav-link" href="#" aria-expanded="true">
                            <i class="dripicons-user-group"></i>
                            <span class="w-100">ناحیه کاربری</span>
                            <span class="menu-arrow">
                            <i class="mdi mdi-chevron-right"></i>
                        </span>
                        </a>
                        <ul class="nav-second-level" aria-expanded="false">
                            @if (CheckPermission.Check(User, "User.Index"))
                            {
                                <li>
                                    <a class="menu-item" asp-action="Index" asp-controller="User">کاربر</a>
                                </li>
                            }
                            @if (CheckPermission.Check(User, "Role.Index"))
                            {
                                <li>
                                    <a class="menu-item" asp-action="Index" asp-controller="Role">نقش</a>
                                </li>
                            }
                        </ul>
                    </li>
                }

            </ul>


        </div>
    </div>
</div>
