        @* </div> *@
        <a asp-area="Admin" asp-controller="Activity" asp-action="Index" class="menu-item">
            <i class="fas fa-envelope text-gold"></i><span class="menu-label">فعالیت</span>
        </a>
        <a asp-area="Admin" asp-controller="UnverifiedInvoice" asp-action="Index" class="menu-item">
            <i class="fas fa-envelope text-gold"></i><span class="menu-label">فاکتور های تایید نشده</span>
        </a>
        <a asp-area="Admin" asp-controller="UnsettledInvoice" asp-action="Index" class="menu-item">
            <i class="fas fa-envelope text-gold"></i><span class="menu-label">فاکتور های تسویه نشده</span>
        </a>
    </nav>
    <button id="collapseBtn" class="btn text-white w-100" style="background-color: var(--color-navy);">
        <i id="collapseIcon" class="fas fa-angle-left"></i>
    </button>
</aside>
